//Veni and Ben
//Pig Game One Player Version

import java.util.Scanner;
import java.util.Random;
public class Pig{
  public static void main (String[] args){
    int gamePlaying=1;
    int userTotal=0;
    int cTotal=0;
    while (gamePlaying==1){
         userTotal=userPlay(userTotal);
         cTotal=compPlay()+cTotal;
         gamePlaying=playAgain();
         //System.out.print("I guessed in "+tries+" tries.");
    }
      userTotal=userTotal+userPlay(userTotal);
  }
  public static int userPlay(int userTotal){
    Scanner reader=new Scanner(System.in);
    System.out.print("You have "+userTotal+" points. Hit Enter to roll dice.");
    reader.nextLine();
    Random generator=new Random();
    int dice1=0;
    int dice2=0;
    if (dice1!=1 && dice2!=1){
      dice1=generator.nextInt(5)+1;
      dice2=generator.nextInt(5)+1;
      System.out.println("You rolled "+dice1+" and "+dice2+".");
      userTotal=userTotal+dice1+dice2;
      System.out.println("Your total is "+userTotal);
    }
    return userTotal;
  }
  public static int compPlay(){
    Random g = new Random();
    int ctotal = 0;
    int cagain = 1;
    int cdie1;
    int cdie2;
    while(cagain == 1){
      cdie1 = g.nextInt(6) + 1;
      cdie2 = g.nextInt(6) + 1;
      if(cdie1 == 1 || cdie2 == 1){
        ctotal = 0;
        System.out.println("Computer rolled a " + cdie1 + " and a " + cdie2 + " for a " + ctotal);
        return ctotal;
      }else{
        ctotal += cdie1 + cdie2;
      }
      System.out.println("Computer rolled a " + cdie1 + " and a " + cdie2 + " for a " + ctotal);
      cagain = g.nextInt(2) + 1;
      if(cagain == 1)
         System.out.println("Computer is rolling again");
    }
    return ctotal;
  }
  public static int playAgain(){
      Scanner reader=new Scanner(System.in);
      int output=1;
      int asking=1;
      while (asking==1){
         System.out.print("Play Again? Enter y/n: ");
         String answer=reader.nextLine();
         if (answer.equals("y")){
            output=1;
            asking=0;
         }else if (answer.equals("n")){
            output=0;
            asking=0;
         }else{
            asking=1;
         }
      }
      return output;
   }
}
