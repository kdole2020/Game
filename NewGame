//Pig Game One Player Version

import java.util.Scanner;
import java.util.Random;
public class Pig{
  public static void main (String[] args){
    int answering=1;
       Scanner reader=new Scanner(System.in);
       System.out.print("Do you want to play with 1 player or two player? Enter 1 or 2: ");
       int player=reader.nextInt();
       if (player==1){
          int userTotal=0;
          int cTotal=0;
             while(cTotal < 100 && userTotal < 100){
                if(cTotal < 100 && userTotal < 100)
                   userTotal=userPlay(userTotal);
                if(cTotal < 100 && userTotal < 100)
                   cTotal=compPlay()+cTotal;
             }
          System.out.println("You had "+userTotal+" points. The computer had "+cTotal+" points.");
          if (userTotal>cTotal)
            System.out.print("You won!");
          else if (userTotal<cTotal)
            System.out.print("You lost.");
          else
            System.out.print("The game was a tie.");  
       }else if (player==2){
         int gamePlaying=1;
         int userTotal1=0;
         int userTotal2=0;
         while(userTotal1 < 100 && userTotal2 < 100){
            if(userTotal1 < 100 && userTotal2 < 100){
               System.out.println("Player 1 is playing.");
               userTotal1=userPlay(userTotal1);
            }
            if(userTotal1 < 100 && userTotal2 < 100){
               System.out.println("\nPlayer 2 is playing.");
               userTotal2=userPlay(userTotal2);
            }
            System.out.println("Player 1 had "+userTotal1+" points. Player 2 had "+userTotal2+" points.");
         }
         if (userTotal1>userTotal2)
            System.out.print("Player 1 won.");
         else if (userTotal1<userTotal2)
            System.out.print("Player 2 won.");
         else
            System.out.print("The game was a tie.");
         }
   }
   public static int userPlay(int userTotal){
      int gamePlaying=1;
      while (gamePlaying==1){
         Scanner reader=new Scanner(System.in);
         System.out.print("You have "+userTotal+" points. Hit Enter to roll dice.");
         reader.nextLine();
         Random generator=new Random();
         int dice1=0;
         int dice2=0;
         dice1=generator.nextInt(5)+1;
         dice2=generator.nextInt(5)+1;
         if (dice1!=1 && dice2!=1){
            System.out.println("You rolled "+dice1+" and "+dice2+".");
            userTotal=userTotal+dice1+dice2;
            System.out.println("Your total is "+userTotal);
            if(userTotal < 100)
               gamePlaying=playAgain();
            else
               gamePlaying=0;
         }else{
            System.out.println("You rolled "+dice1+" and "+dice2+".");
            System.out.println("Your total is "+userTotal+" and your turn is over because you rolled a 1.");
            gamePlaying=0;
         }
      }
      return userTotal;
   }
   public static int compPlay(){
      Random g = new Random();
      int ctotal = 0;
      int cagain = 1;
      int cdie1;
      int cdie2;
      while(ctotal <= 15){
         cdie1 = g.nextInt(6) + 1;
         cdie2 = g.nextInt(6) + 1;
         if(cdie1 == 1 || cdie2 == 1){
            ctotal = 0;
            System.out.println("Computer rolled a " + cdie1 + " and a " + cdie2 + " for a " + ctotal);
            return ctotal;
         }else{
            ctotal += cdie1 + cdie2;
         }
         System.out.println("Computer rolled a " + cdie1 + " and a " + cdie2 + " for a " + ctotal);
      }
      return ctotal;
   }
   public static int playAgain(){
      Scanner reader=new Scanner(System.in);
      int output=1;
      int asking=1;
      while (asking==1){
         System.out.print("Roll Again? Enter y/n: ");
         String answer=reader.nextLine();
         if (answer.equals("y")){
            output=1;
            asking=0;
         }else if (answer.equals("n")){
            output=0;
            asking=0;
         }else{
            asking=1;
         }
      }
      return output;
   }
}
