//Pig Game One Player Version

import java.util.Scanner;
import java.util.Random;
public class Pig{
  public static void main (String[] args){
    
    Scanner reader=new Scanner(System.in);
    System.out.print("Do you want to play with 1 player or two player? Enter 1 or 2: ");
    int player=reader.nextInt();
    if (player==1){
       int gamePlaying=1;
       int userTotal=0;
       int cTotal=0;
       while (gamePlaying==1){
            userTotal=userPlay(userTotal);
            cTotal=compPlay()+cTotal;
            gamePlaying=playAgain();
            //System.out.print("I guessed in "+tries+" tries.");
       }
         System.out.print(userTotal+"\n"+cTotal);
    }else if (player==2){
      int gamePlaying=1;
      int userTotal1=0;
      int userTotal2=0;
      while (gamePlaying==1){
            userTotal1=userPlay(userTotal1);
            userTotal2=userPlay(userTotal2);
            gamePlaying=playAgain();
            //System.out.print("I guessed in "+tries+" tries.");
       }
         System.out.print(userTotal1+"\n"+userTotal2);
    }
  }
  public static int userPlay(int userTotal){
    Scanner reader=new Scanner(System.in);
    System.out.print("You have "+userTotal+" points. Hit Enter to roll dice.");
    reader.nextLine();
    Random generator=new Random();
    int dice1=0;
    int dice2=0;
    if (dice1!=1 && dice2!=1){
      dice1=generator.nextInt(5)+1;
      dice2=generator.nextInt(5)+1;
      System.out.println("You rolled "+dice1+" and "+dice2+".");
      userTotal=userTotal+dice1+dice2;
      System.out.println("Your total is "+userTotal);
    }
    return userTotal;
  }
  public static int compPlay(){
    Random g = new Random();
    int ctotal = 0;
    int cagain = 1;
    int cdie1;
    int cdie2;
      cdie1 = g.nextInt(6) + 1;
      cdie2 = g.nextInt(6) + 1;
      if(cdie1 == 1 || cdie2 == 1){
        ctotal = 0;
        System.out.println("Computer rolled a " + cdie1 + " and a " + cdie2 + " for a " + ctotal);
        return ctotal;
      }else{
        ctotal += cdie1 + cdie2;
      }
      System.out.println("Computer rolled a " + cdie1 + " and a " + cdie2 + " for a " + ctotal);
    return ctotal;
  }
  public static int playAgain(){
      Scanner reader=new Scanner(System.in);
      int output=1;
      int asking=1;
      while (asking==1){
         System.out.print("Play Again? Enter y/n: ");
         String answer=reader.nextLine();
         if (answer.equals("y")){
            output=1;
            asking=0;
         }else if (answer.equals("n")){
            output=0;
            asking=0;
         }else{
            asking=1;
         }
      }
      return output;
   }
}

